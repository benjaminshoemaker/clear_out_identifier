{
  "name": "clear-out-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/*",
    "apps/*",
    "scripts"
  ],
  "scripts": {
    "server": "pnpm --filter @clearout/server dev",
    "build": "pnpm -r --filter ./packages/identify... run build && pnpm -r --filter ./apps/cli... run build && pnpm -r --filter @clearout/server run build",
    "test": "pnpm -r --filter ./packages/identify... run test",
    "cli": "pnpm -r --filter ./packages/identify... run build && pnpm --filter @clearout/cli start",
    "eval": "pnpm --filter scripts run eval"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "openai": "^4.57.0",
    "yargs": "^17.7.2"
  }
}
